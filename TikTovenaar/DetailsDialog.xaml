<Window x:Class="TikTovenaar.DetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FF000435"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="8" Padding="10" Background="#FF000435">
        <StackPanel>
            <Button Content="X" Width="20" Height="20" FontSize="12" Foreground="#F0F0F0" Background="#D32F2F" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" 
                Click="CloseButton_Click" BorderBrush="Transparent" BorderThickness="0"/>
            <TextBlock x:Name="titleText" Text="Betekenis van het woord: 'Tafel'" FontWeight="Bold" FontSize="20" Margin="0,10,0,10" Foreground="#F0F0F0" HorizontalAlignment="Center"/>
            <TextBlock x:Name="subTitleText" Text="Tafel is een meubel dat meestal uit 4 poten bestaat." TextWrapping="Wrap" Margin="0,0,0,20" Foreground="#F0F0F0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
